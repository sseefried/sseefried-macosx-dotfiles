export SUBLIME_PROJECT_DIR=$HOME/sublime-projects
export PATH=$HOME/.cabal/bin:$HOME/Library/Haskell/bin:$PATH

# For Sean Seefried' task tool
export TASK_DIR=$HOME/.task

# For X11
export PKG_CONFIG_PATH=/opt/X11/lib/pkgconfig

export LLVM_PATH="/usr/local/llvm-5.0.1"
export PATH="$LLVM_PATH/bin:$PATH"

export LDFLAGS="-L$LLVM_PATH/lib"
export CPPFLAGS="-I$LLVM_PATH/include"

export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

export SEANSEEFRIED_DOT_ORG="tilthydeath:/var/www/seanseefried.org"
export SEANSEEFRIED_DOT_ORG_MACHINE="tilthydeath"
export SEANSEEFRIED_DOT_ORG_PATH="/var/www/seanseefried.org"

if [ -d /opt/homebrew/opt/nvm ]; then
export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion
fi  